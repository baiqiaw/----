{
  "name": "@document-converter/desktop",
  "version": "1.0.0",
  "description": "文档转换工具桌面客户端",
  "private": true,
  "main": "dist/main/index.js",
  "scripts": {
    "dev": "concurrently \"pnpm dev:main\" \"pnpm dev:renderer\"",
    "dev:main": "tsx watch src/main/index.ts",
    "dev:renderer": "vite",
    "build": "pnpm build:main && pnpm build:renderer && pnpm build:electron",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build",
    "build:electron": "electron-builder",
    "lint": "eslint src --ext .ts,.tsx",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@prisma/client": "^5.7.0",
    "electron-updater": "^6.1.7"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.54.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tsx": "^4.6.2",
    "typescript": "^5.2.2",
    "vite": "^5.0.0"
  }
}

